<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid Name="FilmsDataGrid" Grid.ColumnSpan="2" AutoGenerateColumns="True"/>

        <Button Name="AddFilmButton" Content="Добавить" Grid.Column="0" Grid.Row="1" Click="AddFilmButton_Click"/>
        <Button Name="RemoveFilmButton" Content="Удалить" Grid.Column="1" Grid.Row="1" Click="RemoveFilmButton_Click"/>
    </Grid>
</Window>
